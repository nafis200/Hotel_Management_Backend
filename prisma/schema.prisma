
generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password  String
  profilePhoto  String?
  contactNumber  String?
  verified Boolean @default(false)
  bookings      Booking[]
  role UserRole             @default(USER)
  status                    UserStatus          @default(ACTIVE)
  createdAt                 DateTime            @default(now())
  updatedAt                 DateTime            @updatedAt
}




model ImageGallery {
  id      Int      @id @default(autoincrement())
  images  String[] @db.Text
}


model RoomType {
  id          Int      @id @default(autoincrement())
  name        String   
  description String
  price       Int
  images      String[]   
  facilities  String[]   
  rooms       Room[]     
  createdAt   DateTime @default(now())
}

model Room {
  id          Int      @id @default(autoincrement())
  roomNumber  Int      @unique
  roomTypeId  Int
  roomType    RoomType @relation(fields: [roomTypeId], references: [id])
  bookings    Booking[]  
}

model Booking {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  roomId      Int
  room        Room     @relation(fields: [roomId], references: [id])
  checkIn     DateTime
  checkOut    DateTime
  adults      Int
  children    Int
  totalAmount Int
  status      BookingStatus @default(PENDING_PAYMENT)
  createdAt   DateTime @default(now())
}



enum BookingStatus {
  PENDING_PAYMENT
  CONFIRMED
  CANCELLED
}


enum UserRole {
  USER
  PREMIUM_USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}
